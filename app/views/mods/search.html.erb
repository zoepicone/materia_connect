<% if @query.present? %>
  <h1>Showing results for "<%= @query %>"</h1>
<% else %>
  <h1>Search</h1>
<% end %>

<%= form_with url: search_path, method: :get do %>
  <div class="input-group mb-3">
    <%= search_field_tag 'query', @query.present? ? @query : '', placeholder: 'Search for a mod...', class: 'form-control' %>
    <div class="input-group-append">
      <%= submit_tag 'Search', type: 'submit', class: 'btn btn-outline-primary', name: nil %>
    </div>

  </div>
<% end %>

<div id="mods">
  <% if @mods.present? %>
    <% @mods.each do |mod| %>
      <%= render partial: "mods/mod", locals: { mod: mod, id: mod.id } %>
    <% end %>
  <% end %>
</div>